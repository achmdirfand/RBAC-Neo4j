2.1 CREATE DATABASE

CREATE DATABASE <database-name>

CREATE USER <user-name>
  SET PASSWORD "<password>"
  SET PASSWORD CHANGE NOT REQUIRED
  SET STATUS ACTIVE
  SET HOME DATABASE <database-name>;

GRANT ROLE architect TO <username>;



SHOW USERS

SHOW CURRENT USER;
SHOW USERS;

SHOW USERS YIELD user, suspended, passwordChangeRequired, roles, home
WHERE user = 'auth1a



CREATE USER

CREATE OR REPLACE USER test1
  SET PASSWORD "123"
  SET PASSWORD CHANGE NOT REQUIRED
  SET STATUS ACTIVE
  SET HOME DATABASE rbac;

ALTER USER

RENAME USER test1 TO test2;



ALTER USER test2 SET PASSWORD 'abc123' CHANGE NOT REQUIRED SET STATUS ACTIVE;


DROP USER

DROP USER test1;

ALTER USER name [IF EXISTS]
  [SET [PLAINTEXT | ENCRYPTED] PASSWORD 'password']
  [[SET PASSWORD] CHANGE [NOT] REQUIRED]
  [SET STATUS {ACTIVE | SUSPENDED} ]
  [SET HOME DATABASE name]
  [REMOVE HOME DATABASE]
  
  
SHOW USER PRIVILEGES

SHOW USER PRIVILEGES;

